    "version": "1.0",
    "contact": {
      "name": "Harvest Hub Project"
    }
  },
  "tags": [
    {
      "name": "GardenService",
      "description": "Service for collecting and retrieving garden sensor data."
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json",
    "application/proto"
  ],
  "produces": [
    "application/json",
    "application/proto"
  ],
  "paths": {
    "/v1/gardens/summary": {
      "get": {
        "summary": "GetSummary (GardenService)",
        "description": "Méthode RPC : GardenService.GetSummary",
        "operationId": "GardenService_GetSummary",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1GetSummaryResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "nodeId",
            "description": "Si vide, résume tous les noeuds",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "hours",
            "description": "Fenêtre glissante en heures (defaut 24)",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int32"
          }
        ],
        "tags": [
          "Garden"
        ]
      }
    },
    "/v1/gardens/{nodeId}/measurements": {
      "post": {
        "summary": "InsertSensorData (GardenService)",
        "description": "Méthode RPC : GardenService.InsertSensorData",
        "operationId": "GardenService_InsertSensorData",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1InsertSensorDataResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "nodeId",
            "description": "ID du noeud/capteur (utilisé aussi dans le path)",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/GardenServiceInsertSensorDataBody"
            }
          }
        ],
        "tags": [
          "Garden"
        ]
      }
    }
